# API Configuration
HAYSTACK_API_HOST=0.0.0.0
HAYSTACK_API_PORT=8000

# CORS Configuration
# Comma-separated list of allowed origins
# Development (multiple ports for Vite's default behavior)
HAYSTACK_CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Production example (uncomment and modify for production):
# HAYSTACK_CORS_ORIGINS=https://app.yourdomain.com

# Embedding Configuration
HAYSTACK_EMBEDDING_MODEL=all-MiniLM-L6-v2
HAYSTACK_EMBEDDING_DIM=384

# Ollama Configuration
HAYSTACK_OLLAMA_API_URL=http://127.0.0.1:11434

# Document Store Configuration
HAYSTACK_COLLECTION_NAME=documents

# Development Mode
HAYSTACK_DEV_MODE=false 